{
  "name": "daily-notes-ai-desktop",
  "version": "1.0.0",
  "description": "Daily Notes AI Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.dailynotesai.desktop",
    "productName": "Daily Notes AI",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "../assets/icon.png",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "files": [
      "main.js",
      "../dist/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
} 